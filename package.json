{
  "name": "blender-development",
  "displayName": "Blender Development",
  "description": "Tools to simplify Blender development.",
  "version": "0.0.3",
  "publisher": "JacquesLucke",
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:blender.startBlender",
    "onCommand:blender.newAddon",
    "onCommand:blender.buildAll",
    "onCommand:blender.launchAll",
    "onCommand:blender.reloadAddons"
  ],
  "main": "./out/extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/JacquesLucke/blender_vscode"
  },
  "bugs": {
    "url": "https://github.com/JacquesLucke/blender_vscode/issues"
  },
  "contributes": {
    "commands": [
      {
        "command": "blender.startBlender",
        "title": "Blender: Start Blender"
      },
      {
        "command": "blender.newAddon",
        "title": "Blender: New Blender Addon"
      },
      {
        "command": "blender.buildAll",
        "title": "Blender: Build All"
      },
      {
        "command": "blender.launchAll",
        "title": "Blender: Launch All"
      },
      {
        "command": "blender.reloadAddons",
        "title": "Blender: Reload Addons"
      }
    ],
    "configuration": [
      {
        "title": "Blender",
        "properties": {
          "blender.blenderPaths": {
            "type": "array",
            "scope": "application",
            "description": "Paths to Blender executables.",
            "items": {
              "type": "object",
              "title": "Single Blender Path",
              "properties": {
                "path": {
                  "type": "string",
                  "description": "Absolute file path to a Blender executable."
                },
                "name": {
                  "type": "string",
                  "description": "Custom name for this Blender version."
                }
              }
            }
          },
          "blender.reloadAddonOnSave": {
            "type": "boolean",
            "scope": "resource",
            "default": false,
            "description": "Reload addon in Blender when a document is saved."
          },
          "blender.allowModifyExternalPython": {
            "type": "boolean",
            "default": false,
            "description": "Allow automatically installing modules in Python distributions outside of Blender."
          },
          "blender.addonBuildTask": {
            "type": "string",
            "scope": "resource",
            "description": "Task that should be executed before the addon can be loaded into Blender."
          },
          "blender.blenderBuildCommand": {
            "type": "string",
            "scope": "resource",
            "description": "Command used to compile Blender.",
            "default": "make debug"
          },
          "blender.addonLoadDirectory": {
            "type": "string",
            "scope": "resource",
            "default": "./",
            "description": "Directory that contains the addon that should be loaded into Blender."
          },
          "blender.addonSourceDirectory": {
            "type": "string",
            "scope": "resource",
            "default": "./",
            "description": "Directory that contains the source code of the addon (used for path mapping for the debugger)."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "@types/request": "^2.48.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.21"
  },
  "dependencies": {
    "request": "^2.87.0"
  },
  "extensionDependencies": [
    "ms-python.python"
  ]
}
