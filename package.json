{
    "name": "blender-development",
    "displayName": "Blender Development",
    "description": "Tools to simplify Blender development.",
    "version": "0.0.1",
    "publisher": "JacquesLucke",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:b3ddev.startBlender"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
            "command": "b3ddev.startBlender",
            "title": "Start Blender"
        }],
        "configuration":[
            {
                "title": "Blender",
                "properties": {
                    "b3ddev.blenderPath": {
                        "type": "string",
                        "default": "",
                        "description": "Path to the Blender executable."
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}